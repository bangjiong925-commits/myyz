# Docker环境配置文件
# 复制此文件为 .env 并根据需要修改配置

# MongoDB管理员密码
MONGO_ADMIN_PASSWORD=your_secure_admin_password_here

# MongoDB应用用户密码
MONGO_APP_PASSWORD=your_secure_app_password_here

# 监控界面密码
MONITOR_PASSWORD=your_monitor_password_here

# 爬虫配置
SCRAPER_INTERVAL=300
MAX_RETRIES=3
TIMEOUT=30

# 日志配置
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=7

# API配置（如果启用API服务）
API_PORT=3000
API_HOST=0.0.0.0

# 时区设置
TZ=Asia/Shanghai