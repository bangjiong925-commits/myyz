{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE"
  },
  "environments": {
    "production": {
      "variables": {
        "MONGODB_URI": "${{MONGODB_URI}}",
        "MONGODB_DB_NAME": "taiwan_pk10",
        "PYTHON_VERSION": "3.11",
        "PORT": "${{PORT}}",
        "ENVIRONMENT": "production",
        "LOG_LEVEL": "INFO"
      }
    }
  },
  "services": [
    {
      "name": "mongodb-api",
      "source": {
        "type": "image",
        "image": "python:3.11-slim"
      },
      "variables": {
        "MONGODB_URI": "${{MONGODB_URI}}",
        "MONGODB_DB_NAME": "taiwan_pk10",
        "PORT": "${{PORT}}"
      }
    },
    {
      "name": "auto-scraper",
      "source": {
        "type": "image",
        "image": "python:3.11-slim"
      },
      "variables": {
        "MONGODB_URI": "${{MONGODB_URI}}",
        "MONGODB_DB_NAME": "taiwan_pk10"
      }
    }
  ]
}